@using EN.Shared;

<BodyTemplate>
        <EditForm Model="@ModalCustomer">
        <div class="mb-3">
            <label class="form-label">Company Name</label><br>
            <InputText @bind-Value="@(ModalCustomer.CompanyName)" />
        </div>
        <div class="mb-3">
            <label class="form-label">Contact Name</label><br>
            <InputText @bind-Value="@(ModalCustomer.ContactName)" />
        </div>
        <div class="mb-3">
            <label class="form-label">Address</label><br>
            <InputText @bind-Value="@(ModalCustomer.Address)" />
        </div>
        <div class="mb-3">
            <label class="form-label">City</label><br>
            <InputText @bind-Value="@(ModalCustomer.City)" />
        </div>
        <div class="mb-3">
            <label class="form-label">Region</label><br>
            <InputText @bind-Value="@(ModalCustomer.Region)" />
        </div>
        <div class="mb-3">
            <label class="form-label">Postal Code</label><br>
            <InputText @bind-Value="@(ModalCustomer.PostalCode)" />
        </div> 
        <div class="mb-3">
            <label class="form-label">Country</label><br>
            <InputText @bind-Value="@(ModalCustomer.Country)" />
        </div>
        <div class="mb-3">
            <label class="form-label">Phone</label><br>
            <InputText @bind-Value="@(ModalCustomer.Phone)" />
        </div>  
        @* </table> *@
        </EditForm>              
    </BodyTemplate>
    <FooterTemplate>
        <Button Color="ButtonColor.Secondary" @onclick="ModalClose">Close</Button>
        <Button Color="ButtonColor.Primary" @onclick="ModalSave">Save</Button>
    </FooterTemplate>

